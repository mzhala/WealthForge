<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    tools:context=".NewTransactionFragment">

    <!-- New Transaction Card-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/black_card"
        android:orientation="vertical">

        <!-- New Category Card Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/black_card_header">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="New Transaction"
                android:textColor="#FFFFFF"
                style="@style/CardTitleStyle" />

        </LinearLayout>

        <!-- Category Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Name"
                style="@style/CardLabelStyle"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:background="@drawable/spinner_background"
                android:paddingEnd="16dp"
                style="@style/LabelStyle"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- Entry Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                style="@style/CardLabelStyle"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="184dp"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/monthSpinner"
                    android:layout_width="86dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/spinner_background"
                    android:paddingEnd="16dp"
                    style="@style/LabelStyle" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Spinner
                    android:id="@+id/yearSpinner"
                    android:layout_width="86dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/spinner_background"
                    android:paddingEnd="16dp"
                    style="@style/LabelStyle" />

            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- Entry Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                style="@style/CardLabelStyle"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:background="@drawable/linear_layout_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="R"
                    style="@style/LabelStyle" />

                <EditText
                    android:id="@+id/AmountInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="0"
                    android:inputType="number"
                    style="@style/Money"
                    android:background="@android:color/white" />
            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!--Entry Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Description"
                style="@style/CardLabelStyle"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/description"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:paddingEnd="16dp"
                android:paddingStart="5dp"
                android:hint=""
                style="@style/Money"
                android:background="@drawable/linear_layout_border"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!--Entry Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:orientation="horizontal">

            <Button
                android:id="@+id/uploadImageButton"
                style="@style/CardButtonStyle"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Upload Image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:layout_marginStart="5dp"
                style="@style/CardLabelStyle"
                android:id="@+id/uploadImageButton_status"
                />
        </LinearLayout>

    </LinearLayout>

    <!-- Add Category to budget -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/addCategoryButton"
            style="@style/MyButtonStyle"
            android:layout_width="184dp"
            android:layout_height="match_parent"
            android:text="Add Category" />

    </LinearLayout>

    <!-- Recent Transactions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Transactions"
            style="@style/LabelStyle"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />
</LinearLayout>