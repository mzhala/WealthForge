<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#000000" /> <!-- Border thickness --> <!-- Border color -->
            <corners android:radius="5dp" /> <!-- Optional: rounded corners -->
        </shape>

    </item>

    <!-- Spinner dropdown icon -->
    <item android:right="8dp" android:gravity="end|center_vertical">
        <bitmap
            android:src="@android:drawable/arrow_down_float"
            android:gravity="center"
            android:right="12dp" />
    </item>
</layer-list>
