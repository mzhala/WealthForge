<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WealthForge" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>

        <item name="actionBarSize">140dp</item>
    </style>

    <style name="Theme.WealthForge.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WealthForge.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="Theme.WealthForge.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>